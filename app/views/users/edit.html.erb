
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>


      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>




      <div class="form-group">
        <%= form_with model: @user do |f| %>


  <%= f.label :name,"Name" %>
  <%= f.text_field :name, class:"form-control", autofocus: true, id:"user_name" %>


  <%= f.label :image,"Image" %>
  <%= f.file_field :profile_image, class:"form-control-file" %>


  <%= f.label :introduction,"Introduction" %>
  <%= f.text_area :introduction, class:"form-control", id:"user_introduction" %>

  <%= f.submit "Update User", class:"btn btn-secondary" %>


  <% end %>

 </div>



