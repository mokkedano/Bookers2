<%= form_with model: @book, method: :post do |f| %>

  <div class="field">
    <%= f.label :title,"Title" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body,"Opinion" %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
