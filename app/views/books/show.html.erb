
<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>



<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'users/sidemenu', locals: { user: @user, book: @book } %>
    </div>



    <!--投稿詳細-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(80,80) %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@books) do %>
                <%= @books.title %>
              <% end %>
            </td>
            <td><%= @books.body %></td>
              <% if @user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@books.id),class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@books.id),class: "btn btn-sm btn-danger",
                      method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>