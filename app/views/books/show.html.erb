
<% flash.each do |message_type, message| %>
  <div><%= message %></div>
<% end %>


<%= render partial: 'users/sidemenu', locals: { user: @user, book: @book } %>





<!--投稿詳細-->
<h2>Book detail</h2>

  <table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user) do %>
            <%= image_tag @user.get_profile_image(80,80) %><br>
            <%= @user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@books) do %>
            <%= @books.title %>
          <% end %>
        </td>
        <td><%= @books.body %></td>
          <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
            <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
      </tr>
    </tbody>
  </table>
