<!--新規投稿フォーム-->
<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, method: :post do |f| %>

  <div class="field">
    <%= f.label :title,"Title" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body,"Opinion" %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>




<!--みんなの投稿一覧-->
<h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

   <% @books.each do |book| %>

    <tbody>
      <tr>
        <td><%= image_tag book.user.get_profile_image(80,80) %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    </tbody>

    <% end %>
  </table>






















